<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity4">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="223dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Multiplication Table of "
            android:textColor="#0000ff"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etMNum"
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="53dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
            android:layout_marginStart="53dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="33dp"
            android:layout_weight="1"
            android:text="till"
            android:textColor="#0000ff"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etMNum2"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/multiplicationBtn"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="32dp"
            android:background="@color/common_google_signin_btn_text_dark_focused"
            android:onClick="showTable"
            android:paddingLeft="34dp"
            android:paddingTop="12dp"
            android:paddingRight="45dp"
            android:text="@string/show"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:foregroundGravity="fill_horizontal">

            <TextView
                android:id="@+id/tvMultiplication"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="32dp"
                android:paddingLeft="34dp"
                android:paddingTop="12dp"
                android:paddingBottom="45dp"
                android:text="show multiplication table here if everything goes fine"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp"
                android:textStyle="bold"
                app:fontFamily="@font/aldrich" />
        </ScrollView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>